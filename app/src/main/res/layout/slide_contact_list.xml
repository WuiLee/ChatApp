<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/doctor"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/slide_headings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="@string/heading"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#A8A9B2"

        />

    <TextView
        android:id="@+id/slide_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_headings"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="@string/phone_no"
        android:textSize="25sp"
        android:textColor="#A8A9B2"
        />

    <TextView
        android:id="@+id/slide_office_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_phone_no"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="@string/office_hours_24_hours"
        android:textSize="25sp"
        android:textColor="#A8A9B2"
        />

</RelativeLayout>