<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".EditProfileActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/edit_profile_toolbar">

    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Account Setting"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/update_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button"
        android:text="SAVE"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        />
    <Button
        android:id="@+id/cancel_update_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button"
        android:text="Cancel"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/edit_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="17dp"
        android:layout_below="@+id/edit_profile_toolbar"
        android:src="@drawable/profile_image"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/colorPrimary"/>

    <EditText
        android:id="@+id/edit_user_name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/edit_profile_image"
        android:inputType="textPersonName"
        android:hint="Your Name"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:padding="6dp"
        android:textColorHint="@android:color/darker_gray"
        />

    <EditText
        android:id="@+id/edit_user_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/edit_user_name"
        android:inputType="textVisiblePassword"
        android:hint="Your StudentID / StaffID"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:padding="6dp"
        android:textColorHint="@android:color/darker_gray"

        />

    <EditText
        android:id="@+id/edit_user_identity"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/edit_user_id"
        android:inputType="text"
        android:hint="Lecturer / Student"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:padding="6dp"
        android:textColorHint="@android:color/darker_gray"
        />

    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/edit_user_identity"
        android:inputType="textPhonetic"
        android:hint="Phone Number"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:padding="6dp"
        android:textColorHint="@android:color/darker_gray"
        />

    <EditText
        android:id="@+id/edit_course_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/edit_phone_number"
        android:inputType="text"
        android:hint="CourseID/ DepartmentID"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:padding="6dp"
        android:textColorHint="@android:color/darker_gray"
        />


</RelativeLayout>